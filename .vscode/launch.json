{
  // VS Code Debug Configurations
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug pdfreorder",        // Display name in the debug menu
      "type": "go",                      // Go debugger (Delve)
      "request": "launch",               // Launches the program
      "program": "${workspaceFolder}",   // Main package is in the project folder
      "args": [
        "-in", "SWM-------------------------------_C51.pdf",            // Input file (adjust path!)
        "-out", "ausgabe_duplex.pdf",     // Output file
        "-backdesc",  
        "-rotateback"
      ],
      "cwd": "${workspaceFolder}",       // Working directory
      "env": {}
      //"console": "integratedTerminal"    // Output in VS Code terminal
    }
  ]
}